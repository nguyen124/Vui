@{
    var amounts = new List<Decimal> { 100, 25.0m, -40, -275};     
}
<ul>
    @foreach (decimal amount in amounts)
    {
        <li>@formatAmount(amount)</li>
    }
</ul>
@helper formatAmount(decimal amount) { 
    var color = "green";
    if (amount < 0)
    {
        color = "red";
    }    
    <span style="color:@color">@String.Format("{0:c}",amount)</span>
}